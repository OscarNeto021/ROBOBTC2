# Exemplo de arquivo .env para o BTC-PERP Absolute Trader

# Exchange
EXCHANGE=binance
API_KEY=
API_SECRET=
API_PASSWORD=
USE_TESTNET=true   # troca p/ false ao vivo

# Chaves de API alternativas (exchanges opcionais)
BINANCE_API_KEY="your_binance_api_key"
BINANCE_SECRET_KEY="your_binance_secret_key"

BYBIT_API_KEY="your_bybit_api_key"
BYBIT_SECRET_KEY="your_bybit_secret_key"

OKX_API_KEY="your_okx_api_key"
OKX_SECRET_KEY="your_okx_secret_key"

# Configurações do ambiente
# 'testnet' para conta demo, 'live' para conta real
ENVIRONMENT="testnet"

# Configurações de trading
# Par de trading (ex: BTC/USDT)
TRADING_PAIR="BTC/USDT"

# Intervalo de velas para coleta de dados (ex: 5m, 1h, 1d)
CANDLE_INTERVAL="5m"

# Profundidade do order book para snapshots
ORDERBOOK_DEPTH=50

# Configurações de inovação do agente
# Ativar/desativar o módulo de detecção de regimes de mercado
ENABLE_MARKET_REGIME_DETECTION=True

# Ativar/desativar a engenharia de features on-chain/sentimento
ENABLE_ONCHAIN_SENTIMENT_FEATURES=True

# Ativar/desativar o modelo híbrido de previsão
ENABLE_HYBRID_MODEL=True

# Ativar/desativar a estratégia de execução maker-rebate
ENABLE_MAKER_REBATE_EXECUTION=True

# Risco
MAX_DD_PCT=10
POSITION_KELLY=0.5

# Ativar/desativar o módulo de gerenciamento de risco adaptativo
ENABLE_ADAPTIVE_RISK_MANAGEMENT=True

# Outras configurações (adicionar conforme necessário)
# ...


